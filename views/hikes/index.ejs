
<!DOCTYPE html>
<html lang="en">
    <%- include("../partials/head.ejs") %>
    <body>
        <%- include("../partials/header.ejs") %>
        <main>
        <h2>All Hikes</h2>
        <a href="/hikes/new"><button>Add New Hike</button></a>
            <div class="mountains-hiked">
                <% hikes.forEach(hike => { %>
                    <article>
                        <h3><%= hike.hikeName %></h3>
                        <p>Completed: <%= hike.hikeComplete ? "Yes" : "No" %></p>
                        <div class="show-link">
                        <a href="/hikes/<%= hike._id %>"><button>Hike Details</button></a>
                        </div>
                    </article>
                <% }) %>
            </div>
        </main>
    </body>
</html>
